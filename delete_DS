import os

def delete_ds_store(directory):
    for root, dirs, files in os.walk(directory):
        for file in files:
            if file == ".DS_Store":
                file_path = os.path.join(root, file)
                os.remove(file_path)
                print(f"Deleted: {file_path}")

# Provide the directory path where you want to search for .DS_Store files
directory_path = "/Users/soethandara/Desktop/Flutter/FlutterClass2024/similarity_check(version1)"
delete_ds_store(directory_path)
